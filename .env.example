# AI Provider Configuration
# This application uses OpenRouter for unified multi-provider routing
# See: https://openrouter.ai/docs

# =============================================================================
# ENVIRONMENT VARIABLE TEMPLATE FILE
# =============================================================================
# ⚠️  IMPORTANT: This is an EXAMPLE/TEMPLATE file with placeholder values only
# All values starting with "your_" are placeholders and MUST be replaced with real values
# DO NOT use these placeholder values in production
# This file is safely committed to version control as it contains no real secrets

# =============================================================================
# OPENROUTER CONFIGURATION (REQUIRED)
# =============================================================================
# ⚠️ SECURITY UPDATE: API keys are now handled server-side for security
#
# For PRODUCTION/DEPLOYMENT:
# Set OPENROUTER_API_KEY as a server-side environment variable in Vercel:
#   vercel env add OPENROUTER_API_KEY production
#
# For LOCAL DEVELOPMENT:
# Set OPENROUTER_API_KEY in .env.local (server-side only)
#
# REMOVED: Client-side API key (was INSECURE!)
# VITE_OPENROUTER_API_KEY - NO LONGER USED
#
# NEW: Server-side API key (SECURE) - Set in Vercel dashboard or .env.local
# OPENROUTER_API_KEY=your_openrouter_api_key_here
#
# Get your key at: https://openrouter.ai/keys

# =============================================================================
# TURSO DATABASE CONFIGURATION (REQUIRED FOR CLOUD SYNC)
# =============================================================================
# Turso provides distributed SQLite database for better data persistence and sync
# Get started: https://turso.tech/
#
# 1. Install Turso CLI: curl -sSfL https://get.tur.so/install.sh | bash
# 2. Create database: turso db create novelist-ai
# 3. Get URL: turso db show novelist-ai --url
# 4. Create token: turso db tokens create novelist-ai
#
# For local development without Turso, the app will use IndexedDB (legacy mode)
VITE_TURSO_DATABASE_URL=your_turso_database_url_here
VITE_TURSO_AUTH_TOKEN=your_turso_auth_token_here

# OpenRouter Advanced Features
VITE_ENABLE_AUTO_ROUTING=true
VITE_ENABLE_MODEL_VARIANTS=true
VITE_CACHE_MODEL_LIST_DURATION=86400

# AI Configuration
# Default provider: nvidia (recommended), openai, anthropic, mistral, or other providers
VITE_DEFAULT_AI_PROVIDER=nvidia

# Model Configuration
# Thinking/Reading Model (complex tasks): anthropic/claude-3-5-sonnet-20241022
# Default Model (standard tasks): nvidia/nemotron-3-nano-30b-a3b:free
# Fast Model (simple tasks): nvidia/nemotron-3-nano-30b-a3b:free
VITE_DEFAULT_AI_MODEL=nvidia/nemotron-3-nano-30b-a3b:free
VITE_THINKING_AI_MODEL=anthropic/claude-3-5-sonnet-20241022

# Cost and Usage Limits
VITE_MONTHLY_AI_BUDGET=50
VITE_ENABLE_AUTO_FALLBACK=true

# =============================================================================
# POSTHOG ANALYTICS CONFIGURATION
# =============================================================================
# PostHog API Key - Get your key at: https://app.posthog.com/project/settings
VITE_POSTHOG_API_KEY=your_posthog_api_key_here
# PostHog API Host - Use default or your self-hosted instance
VITE_POSTHOG_API_HOST=https://app.posthog.com
# Enable/disable PostHog analytics
VITE_POSTHOG_ENABLED=true

# =============================================================================
# VERCEL KV CONFIGURATION (OPTIONAL - Production Rate Limiting)
# =============================================================================
# ⚠️ NOTE: Vercel KV is available on Pro and Enterprise plans only
# Hobby plan: Use in-memory rate limiting (automatic, no configuration needed)
# Pro/Enterprise: Distributed rate limiting via Vercel KV
#
# If not configured, the application will use in-memory rate limiting (works fine for hobby)
# For Pro/Enterprise plans, get credentials from: https://vercel.com/dashboard/stores
# KV_REST_API_URL=your_kv_rest_api_url_here
# KV_REST_API_TOKEN=your_kv_rest_api_token_here

